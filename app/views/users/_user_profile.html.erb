<h1>Profile</h1>
<div class="profile-img">

  <div class="thumbnail">
    <%= image_tag user.image_url %>
    <p>User: <%= fullname(user) %></p>

    <p>Rant Frequency: <%= user.rant_freq %></p>

    <p>Bio: <%= user.bio %></p>
  </div>
</div>

<%= follow_button(user) %>

<h3>Create a comment</h3>
<%= form_for Comment.new, url: user_comments_path(user) do |f| %>
  <%= f.text_field :body %>
  <%= f.submit %>
<% end %>
<% if user.comments.count > 0 %>
  <h3>Comments</h3>
  <%= render user.comments %>
<% end %>
<hr/>
<hr/>

<h1>Current Rants</h1>
<div>
  <%= render sort_by_fav_count(user.rants) %>
  <hr/>
</div>