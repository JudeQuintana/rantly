<div>

  <section>

    <article class="one_third"></article>
    <article class="one_third">
      <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |err| %>
          <div class="errors">
            <p><%= err %></p>
          </div>
        <% end %>
      <% end %>
      <h1>Login</h1>
      <%= form_for @user, url: signin_path do |f| %>
        <div>
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>
        <div>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div>
          <%= f.submit 'Login' %>
        </div>
      <% end %>
    </article>
    <article class="one_third"></article>

  </section>

</div>
