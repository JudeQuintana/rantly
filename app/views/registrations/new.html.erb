<div>
  <section>
    <article>

      <% if flash[:notice] %>
        <div>
          <p>Thanks for registering!</p>
        </div>
      <%end %>
      <%= form_for @user, url: registrations_path do |f| %>
        <div>
          <%= f.label(:username) %>
          <%= f.text_field(:username) %>
        </div>
        <div>
          <%= f.label(:password) %>
          <%= f.password_field :password %>
        </div>
        <div>
          <%= f.label(:first_name) %>
          <%= f.text_field(:first_name) %>
        </div>
        <div>
          <%= f.label(:last_name) %>
          <%= f.text_field(:last_name) %>
        </div>
        <div>
          <%= f.label(:bio) %>
          <%= f.text_field(:bio) %>
        </div>
        <div>
          <%= f.label(:rant_freq, 'Daily') %>
          <%= f.radio_button :rant_freq,'Daily' %>
        </div>
        <div>
          <%= f.label(:rant_freq, 'Weekly') %>
          <%= f.radio_button :rant_freq,'Weekly' %>
        </div>
        <div>
          <%= f.label(:rant_freq, 'Monthly') %>
          <%= f.radio_button :rant_freq,'Monthly' %>
        </div>
        <div>
          <%= f.submit 'Register' %>
        </div>
      <% end %>

    </article>
  </section>
</div>